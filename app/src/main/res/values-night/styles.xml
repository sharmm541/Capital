<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для контейнеров с автоматическим фоном -->

    <!-- Стиль для карточек в темной теме -->

    <!-- Стиль для AppBarLayout в темной теме -->

    <!-- Базовые стили с прямым указанием шрифтов (темные версии) -->
    <style name="TextHeader1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextBodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Градиентные тексты -->
    <style name="TextGradientLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="TextGradientMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Кнопки -->
    <style name="ButtonGradient">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="ButtonOutline">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:background">@drawable/button_outline_dark</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Поля ввода -->
    <style name="InputField">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@drawable/input_background_dark</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Стиль для диалогов -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="backgroundColor">@color/background_dark</item>
        <item name="android:windowBackground">@drawable/dialog_background_dark</item>
        <item name="android:background">@drawable/dialog_background_dark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Стиль для DatePicker -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background_dark</item>
        <item name="android:background">@drawable/dialog_background_dark</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <!-- Стиль для BottomNavigation в темной теме -->

    <!-- Стиль для NavigationView в темной теме -->
</resources>