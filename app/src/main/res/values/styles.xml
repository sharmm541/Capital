<resources>
    <!-- Базовые стили с прямым указанием шрифтов -->

    <!-- Градиентные тексты -->

    <!-- Кнопки -->
    <style name="ButtonGradient">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="ButtonOutline">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_main</item>
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Поля ввода -->

    <!-- Стиль для диалогов -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="backgroundColor">@color/background</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Стиль для DatePicker -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>
</resources>