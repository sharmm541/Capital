<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Список расходов - ПЕРЕМЕЩЕНО В САМЫЙ ВЕРХ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Расходы"
                    android:textColor="@color/text_main_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Статистика расходов -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/stats_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Общие расходы"
                            android:textColor="@color/text_main_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/totalExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ₽"
                            android:textColor="@color/status_error"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/divider_main" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/stats_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="За месяц"
                            android:textColor="@color/text_main_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/budgetAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ₽"
                            android:textColor="@color/status_error"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Последние расходы"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/expensesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Форма добавления расхода -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить расход"
                    android:textColor="@color/text_main_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Сумма -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/amountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Сумма *"
                        android:textColorHint="@color/text_main_secondary"
                        android:background="@drawable/input_background"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_main_primary"
                        android:textSize="16sp"
                        android:padding="16dp"/>

                </LinearLayout>

                <!-- Тип расхода -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Тип расхода *"
                        android:textColor="@color/text_main_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/typeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_background"
                        android:padding="16dp"
                        android:textColor="@color/text_main_primary"/>

                </LinearLayout>

                <!-- Категория -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Категория *"
                        android:textColor="@color/text_main_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/categoryInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_background"
                        android:padding="16dp"
                        android:textColor="@color/text_main_primary"/>

                </LinearLayout>

                <!-- Описание -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/descriptionInput"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Описание (необязательно)"
                        android:textColorHint="@color/text_main_secondary"
                        android:background="@drawable/input_background"
                        android:gravity="top"
                        android:maxLines="3"
                        android:textColor="@color/text_main_primary"
                        android:textSize="16sp"
                        android:padding="16dp"/>

                </LinearLayout>

                <!-- Кнопки -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Удалить"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/error_main" />

                    <Button
                        android:id="@+id/addExpenseButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Добавить"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/accent_green" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>