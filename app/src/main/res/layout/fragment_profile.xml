<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Профиль -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Профиль"
                    android:textColor="@color/text_main_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Информация о пользователе -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/input_background"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile image" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/userNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/input_background"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:text="Иван Иванов"
                            android:textColor="@color/text_main_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="user@example.com"
                            android:textColor="@color/text_main_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveNameButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="@color/input_background"
                        android:text="Сохранить имя"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:cornerRadius="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider_main" />

                <!-- Информация об аккаунте -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Информация об аккаунте"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Дата регистрации -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Дата регистрации"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/registrationDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01.01.2024"
                        android:textColor="@color/text_main_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Статистика -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Всего операций"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalTransactionsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_main_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Баланс -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общий баланс"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalBalanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ₽"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider_main" />

                <!-- Безопасность -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Безопасность"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Смена пароля -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changePasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/input_background"
                    android:text="Сменить пароль"
                    android:textColor="@color/text_main_primary"
                    android:textSize="14sp"
                    app:cornerRadius="12dp" />

                <!-- Кнопка выхода -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/status_error"
                    android:text="Выйти"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>