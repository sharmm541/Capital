<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Курсы валют -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Курсы валют"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/text_main_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastUpdateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Последнее обновление: Сегодня, 10:30"
                    android:textColor="@color/text_main_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/divider_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Основные валюты"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- USD -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="USD"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/usdRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90.45 ₽"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/usdChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="+0.5%"
                        android:textColor="@color/status_success"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- EUR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="EUR"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/eurRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98.20 ₽"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/eurChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="-0.3%"
                        android:textColor="@color/status_error"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- CNY -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CNY"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cnyRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.45 ₽"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cnyChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="+1.2%"
                        android:textColor="@color/status_success"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Конвертер валют -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Конвертер валют"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"/>

                <!-- Поля для конвертера -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Сумма"
                        android:textColor="@color/primary_main"
                        android:textColorHint="@color/text_main_secondary"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Первый спиннер -->
                <Spinner
                    android:id="@+id/currencyFromSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="→"
                    android:textColor="@color/text_main_primary"
                    android:textSize="20sp" />

                <!-- Второй спиннер -->
                <Spinner
                    android:id="@+id/currencyToSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/convertButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/accent_blue"
                    android:text="Конвертировать"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp" />

                <TextView
                    android:id="@+id/conversionResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textColor="@color/text_main_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>