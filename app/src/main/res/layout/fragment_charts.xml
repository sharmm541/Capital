<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Финансовая аналитика"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/text_main_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Селектор периода -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Период:"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/text_main_primary"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/periodSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Информация о минимальных операциях -->
        <TextView
            android:id="@+id/minOperationsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Для построения графиков нужно минимум 3 операции"
            android:textColor="@color/text_main_secondary"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- График доходов и расходов -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Доходы vs Расходы"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Контейнер для вертикальной столбчатой диаграммы -->
                <LinearLayout
                    android:id="@+id/barChartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:paddingHorizontal="40dp"
                    android:paddingBottom="40dp"
                    android:paddingTop="10dp">

                    <!-- Доходы -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|bottom">

                        <TextView
                            android:id="@+id/incomeValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0₽"
                            android:textSize="12sp"
                            android:textColor="@color/text_main_secondary"
                            android:layout_marginBottom="4dp" />

                        <!-- Кастомный столбец для доходов -->
                        <View
                            android:id="@+id/incomeBar"
                            android:layout_width="40dp"
                            android:layout_height="4dp"
                            android:background="@drawable/bar_income_background"
                            android:layout_marginBottom="8dp" />

                        <!-- Подпись "Доходы" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Доходы"
                            android:textSize="12sp"
                            android:textColor="@color/text_main_primary"
                            android:fontFamily="@font/inter_regular" />

                    </LinearLayout>

                    <!-- Расходы -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|bottom">

                        <TextView
                            android:id="@+id/expenseValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0₽"
                            android:textSize="12sp"
                            android:textColor="@color/text_main_secondary"
                            android:layout_marginBottom="4dp" />

                        <!-- Кастомный столбец для расходов -->
                        <View
                            android:id="@+id/expenseBar"
                            android:layout_width="40dp"
                            android:layout_height="4dp"
                            android:background="@drawable/bar_expense_background"
                            android:layout_marginBottom="8dp" />

                        <!-- Подпись "Расходы" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Расходы"
                            android:textSize="12sp"
                            android:textColor="@color/text_main_primary"
                            android:fontFamily="@font/inter_regular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- График расходов по категориям -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Расходы по категориям"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Контейнер для категорий -->
                <LinearLayout
                    android:id="@+id/categoriesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="200dp">

                    <!-- Категории будут добавляться динамически -->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Статистика и подсказки -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Статистика"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Общий доход -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общий доход"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalIncomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ₽"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Общие расходы -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общие расходы"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalExpenseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ₽"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/status_error"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Баланс -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Баланс"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/text_main_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/balanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ₽"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/accent_green"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider_main" />

                <!-- Подсказки -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💡 Финансовые советы"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/text_main_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/financialTipsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Анализируем ваши финансы..."
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/text_main_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>