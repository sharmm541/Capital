<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/surface_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок и кнопки действий -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goalTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название цели"
                android:textColor="@color/text_main_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/editGoalButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Редактировать"
                app:tint="@color/text_main_secondary" />

            <ImageButton
                android:id="@+id/deleteGoalButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Удалить"
                app:tint="@color/status_error" />

        </LinearLayout>

        <!-- Сумма и дата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goalAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.00 / 0.00 ₽"
                android:textColor="@color/text_main_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/goalDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="До 01.01.2024"
                android:textColor="@color/text_main_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Прогресс бар -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/goalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="50"
                android:progressTint="@color/accent_blue"
                android:backgroundTint="@color/divider_main" />

            <TextView
                android:id="@+id/goalProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="50%"
                android:textColor="@color/accent_blue"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/addAmountButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add"
                android:contentDescription="Добавить сумму"
                app:tint="@color/status_success" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>