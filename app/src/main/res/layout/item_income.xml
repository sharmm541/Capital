<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/surface_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/incomeAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000 ₽"
                android:textColor="@color/status_success"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/incomeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2024"
                android:textColor="@color/text_main_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/incomeCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Категория"
                android:textColor="@color/text_main_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/incomeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип"
                android:textColor="@color/text_main_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/incomeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Описание"
            android:textColor="@color/text_main_secondary"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>